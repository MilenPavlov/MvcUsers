@using System.Activities.Expressions
@using Users.Infrastructure
@using Users.Models
@model IEnumerable<Users.Models.AppRole>
@{
    ViewBag.Title = "Roles";
}
<div class="panel panel-primary">
    <div class="panel-heading">Roles</div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th></th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No Roles</td>
            </tr>
        }
        else
        {
            foreach (AppRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users == null || !role.Users.Any())
                        {
                            @: No Users in Role
                        }
                        else
                        {
                            <p>@string.Join(", ", role.Users.Select(x=> Html.GetUserName(x.UserId)))</p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new{ id = role.Id}))
                        {
                            @Html.ActionLink("Edit", "Edit", new{id = role.Id}, new{@class="bnt btn-primary btn-xs"})
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new{@class="btn btn-primary"})
